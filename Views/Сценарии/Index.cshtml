@model IEnumerable<WebLab.Сценарии>

@{
    ViewData["Title"] = "Сценарии";
}

<h1>Сценарии</h1>

<p>
    <a class="text-decoration-none" asp-action="Create">Create New</a> |
    <a class="text-decoration-none" asp-action="Index" asp-controller="Home">To Main Page</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.КВоАктёров)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Описание)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.КВоАктёров)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Описание)
            </td>
            <td>
                <a class="text-decoration-none" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="text-decoration-none" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="text-decoration-none" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
