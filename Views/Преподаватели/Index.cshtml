@model IEnumerable<WebLab.Преподаватели>

@{
    ViewData["Title"] = "Преподаватели";
}

    <h1>Преподаватели</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Фио)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Вуз)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Фио)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Вуз.НазваниеВуза)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Mail">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Mail">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Mail">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
