@model IEnumerable<WebLab.Вузы>

@{
    ViewData["Title"] = "ВУЗы";
}

<h1>ВУЗы</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.НазваниеВуза)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.НазваниеВуза)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DetailsLectors" asp-route-id="@item.Id">Details about Lectors</a> |
                <a asp-action="DetailsGroups" asp-route-id="@item.Id">Details about Groups</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
